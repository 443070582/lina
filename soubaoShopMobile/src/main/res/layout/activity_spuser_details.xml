<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_view"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.soubao.tpshop.activity.person.user.SPUserDetailsActivity">


        <TextView
            android:id="@+id/textView2"
            style="@style/textStyle.Medium.User"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/user_head" />

        <ImageView
            android:id="@+id/imageView"
            style="@style/textStyle.Medium.User"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/arrow_right" />

        <com.soubao.tpshop.view.SPMoreImageView
            android:id="@+id/head_mimgv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toLeftOf="@+id/imageView"
            android:src="@drawable/person_default_head" />

        <View
            android:id="@+id/line1"
            style="@style/separator_line"
            android:layout_below="@+id/textView2"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/textView3"
            style="@style/textStyle.Medium.User"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/line1"
            android:text="@string/user_phone" />

        <TextView
            android:id="@+id/phone_num_txt"
            style="@style/textStyle.Medium.User"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="132455" />

        <View
            android:id="@+id/line2"
            style="@style/separator_line"
            android:layout_below="@+id/textView3"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/textView5"
            style="@style/textStyle.Medium.User"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/line2"
            android:text="@string/user_nick" />

        <ImageView
            android:id="@+id/nick_arrow"
            style="@style/textStyle.Medium.User"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/nickname_txtv"
            style="@style/textStyle.Medium.User"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toLeftOf="@+id/nick_arrow"
            android:text="Ben" />

        <View
            android:id="@+id/line3"
            style="@style/separator_line"
            android:layout_below="@+id/textView5"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/txt_sex"
            style="@style/textStyle.Medium.User"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/line3"
            android:text="@string/user_sex"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/nick_arrow_sex"
            style="@style/textStyle.Medium.User"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@+id/txt_sex"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/sex_txtv"
            style="@style/textStyle.Medium.User"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@+id/txt_sex"
            android:layout_toLeftOf="@+id/nick_arrow_sex"
            android:text="ç”·"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            android:id="@+id/line4"
            style="@style/separator_line"
            android:layout_below="@+id/txt_sex"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/age_txt"
            style="@style/textStyle.Medium.User"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/line4"
            android:text="@string/user_age"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/nick_arrow_age"
            style="@style/textStyle.Medium.User"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@+id/age_txt"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/age_txtv"
            style="@style/textStyle.Medium.User"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@+id/age_txt"
            android:layout_toLeftOf="@+id/nick_arrow_age"
            android:text="1989-11-2" />

        <View
            android:id="@+id/line5"
            style="@style/separator_line"
            android:layout_below="@+id/age_txt"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/btn_save"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/line5"
            android:layout_marginTop="20dip"
            android:text="@string/user_save" />


    </RelativeLayout>
</ScrollView>
