<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@color/bg_view">

    <ImageView
        android:id="@+id/order_coupon_check_imgv"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_space"
        android:background="@drawable/icon_checked" />

    <TextView
        android:id="@+id/order_coupon_title_txtv"
        style="@style/textStyle.Normal.black"
        android:layout_width="match_parent"
        android:layout_height="25dip"
        android:layout_marginLeft="@dimen/margin_space_half"
        android:layout_toRightOf="@id/order_coupon_check_imgv"
        android:gravity="center_vertical|left"
        android:singleLine="true" />

    <TextView
        android:id="@+id/order_coupon_sub_title_txtv"
        style="@style/textStyle.Normal.subTitle"
        android:layout_width="match_parent"
        android:layout_height="15dip"
        android:layout_below="@id/order_coupon_title_txtv"
        android:layout_marginLeft="@dimen/margin_space_half"
        android:layout_toRightOf="@id/order_coupon_check_imgv"
        android:gravity="center_vertical|left"
        android:singleLine="true" />


</RelativeLayout>