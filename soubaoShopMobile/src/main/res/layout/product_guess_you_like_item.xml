<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guess_layout"
    android:layout_width="match_parent"
    android:layout_height="268dip"
    android:orientation="vertical">
    <!-- 产品列表ITEM -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@color/bg_view"
        android:gravity="center"
        android:orientation="vertical">
        <!--@drawable/view_bg_clickable_selector-->
        <ImageView
            android:id="@+id/product_pic_imgv"
            android:layout_width="match_parent"
            android:layout_height="218.0dip"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/test_i" />

        <TextView
            android:id="@+id/product_name_txtv"
            style="@style/textStyle.Normal.black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:ellipsize="end"
            android:gravity="left"
            android:maxEms="6"
            android:maxHeight="30.0dip"
            android:maxLines="1"
            android:paddingLeft="@dimen/margin_space"
            android:paddingRight="@dimen/margin_space" />

        <TextView
            android:id="@+id/product_price_txtv"
            style="@style/textStyle.Normal.lightRed"
            android:layout_width="fill_parent"
            android:layout_height="20.0dip"
            android:ellipsize="end"
            android:gravity="left"
            android:maxEms="6"
            android:maxLines="1"
            android:paddingLeft="@dimen/margin_space"
            android:paddingRight="@dimen/margin_space" />
    </LinearLayout>

</LinearLayout>